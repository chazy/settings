	ui = auto
[log]
	decorate = short
[rebase]
	autosquash = true
[sendemail]
	smtpencryption = tls
	smtpserver = smtp.gmail.com
	smtpuser = christoffer.dall@linaro.org
	smtppass = <changeme>
	smtpserverport = 587
	aliasesfile = ~/.settings/aliases
