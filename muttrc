# A basic .muttrc for use with Gmail

# Change the following six lines to match your Gmail account details
set imap_user = "christofferdall@christofferdall.dk"
set imap_pass = "MYPASS"
set smtp_url = "smtp://christofferdall@christofferdall.dk@smtp.gmail.com:587/"
set smtp_pass = "MYPASS"
set from = "cdall@cs.columbia.edu"
set realname = "Christoffer Dall"

# Change the following line to a different editor you prefer.
set editor = "vim"

# Don't add mail to sent mails
set copy = no

# Basic config, you can leave this as is
set folder = "imaps://imap.gmail.com:993"
set spoolfile = "+INBOX"
set imap_check_subscribed
set hostname = gmail.com
set mail_check = 120
set timeout = 300
set imap_keepalive = 300
set postponed = "+[Gmail]/Drafts"
set header_cache=~/.mutt/cache/headers
set message_cachedir=~/.mutt/cache/bodies
set certificate_file=~/.mutt/certificates
set move = no
set include
set sort = 'threads'
set sort_aux = 'reverse-last-date-received'
set auto_tag = yes
ignore "Authentication-Results:"
ignore "DomainKey-Signature:"
ignore "DKIM-Signature:"
hdr_order Date From To Cc
alternative_order text/plain text/html *
auto_view text/html
bind editor <Tab> complete-query
bind editor ^T complete
bind editor <space> noop 

# Gmail-style keyboard shortcuts
macro index,pager y "<enter-command>unset trash\n <delete-message>" "Gmail archive message"
macro index,pager d "<enter-command>set trash=\"imaps://imap.googlemail.com/[Gmail]/Trash\"\n <delete-message>" "Gmail delete message"
macro index,pager gi "<change-folder>=INBOX<enter>" "Go to inbox"
macro index,pager ga "<change-folder>=[Gmail]/All Mail<enter>" "Go to all mail"
macro index,pager gs "<change-folder>=[Gmail]/Starred<enter>" "Go to starred messages"
macro index,pager gd "<change-folder>=[Gmail]/Drafts<enter>" "Go to drafts"
macro index,pager gk "<change-folder>=KVM ARM<enter>" "Go to KVM ARM"

# Make pager behave like vi
bind pager j next-line
bind pager k previous-line
bind pager h exit
bind pager l view-attachments
bind pager \cd half-down
bind pager \cf next-page
bind pager \cu half-up
bind pager \cb previous-page
bind pager <down> next-line
bind pager <up> previous-line
bind pager <left> exit
bind pager <right> view-attachments
bind pager H display-toggle-weed
set pager_stop

# Other shortcuts
bind index "^" imap-fetch-mail
bind index,pager R group-reply
bind index h noop
